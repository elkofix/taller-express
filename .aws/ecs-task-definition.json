{
    "family": "express-mongo-task",
    "networkMode": "awsvpc",
    "containerDefinitions": [
      {
        "name": "express_app",
        "image": "public.ecr.aws/r7c1c8z5/express-app:latest",
        "cpu": 256,
        "memory": 512,
        "essential": true,
        "portMappings": [
          {
            "containerPort": 3000,
            "hostPort": 3000
          }
        ],
        "environment": [
          {
            "name": "MONGO_URI",
            "value": "mongodb://admin:password@mongo:27017"
          }
        ]
      },
      {
        "name": "mongo",
        "image": "mongo:6.0",
        "cpu": 256,
        "memory": 512,
        "essential": true,
        "portMappings": [
          {
            "containerPort": 27017,
            "hostPort": 27017
          }
        ],
        "environment": [
          {
            "name": "MONGO_INITDB_ROOT_USERNAME",
            "value": "admin"
          },
          {
            "name": "MONGO_INITDB_ROOT_PASSWORD",
            "value": "password"
          }
        ]
      }
    ]
  }
  