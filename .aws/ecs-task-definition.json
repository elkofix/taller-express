{
  "family": "express-mongo-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::<tu-id-de-cuenta>:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::<tu-id-de-cuenta>:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "express_app",
      "image": "public.ecr.aws/r7c1c8z5/express-app:latest",
      "cpu": 256,
      "memory": 512,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "MONGO_URI",
          "value": "mongodb://admin:password@mongo-service:27017"
        }
      ]
    }
  ]
}
